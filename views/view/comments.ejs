<body>
    <div>
        <h2 class="text-center border border-light p-3 "> Comments </h2>
        <% comments.forEach(comment=> { %>
            <div>
                <div class="my-3 col font container-sm bg-info">
                    <%=comment.post %>
                </div>
                <a href="/<%=comment.episode%>/<%=comment._id %>/edit" class=" btn btn-secondary"> Edit Comment</a>
                <% }) %>
            </div>
    </div>
    <a href="/<%=comments[0].episode%>" class="mt-3 btn btn-primary">Back to Episode</a>

</body>