<body>
    <div class="sub-container ">
        <% episode.forEach(ep=> { %>
            <h2 class="p-3 text-center border border-light" id="ep-name">Episode <%=ep.episodeNumber%>:
                    <%=ep.name%>
            </h2>
            <div class=" p-2 mt-3 border border-light font row">
                <input id="img" type="image" src="<%=ep.img %>" name="saveForm" class="col btTxt submit"
                    id="saveForm" />
                <div class="col align-self-top">
                    <h5>Release Date</h5>
                    <%=ep.releaseDate%>
                </div>
                <div class="col align-self-top">
                    <h5>Intro Song</h5>
                    <%=ep.introSong%>
                </div>
                <div class="col align-self-top">
                    <h5>Outro Song</h5>
                    <%=ep.outroSong%>
                </div>
                <div class="mt-3">Summary: <%=ep.summary%>
                </div>
            </div>
            <a href="/<%=ep.episodeNumber%>/new" class="my-3 btn btn-primary">Add a comment</a>
            <a href="/<%=ep.episodeNumber%>/comments" class="my-3  btn btn-secondary"> Edit Comments</a>
            <% comments.forEach(comment=> { %>
                <div>
                    <div class="my-3 font container-sm bg-info">
                        <%=comment.post %>
                            <p>Likes: <%=comment.likes %>
                            </p>
                    </div>
                    <% }) %>
                </div>
                <% }) %>
    </div>
    <a href="/" class="mt-3 btn btn-primary">Back to main page</a>
    <a href="/user/logout" class="mt-3 btn btn-primary">Log Out</a>

</body>