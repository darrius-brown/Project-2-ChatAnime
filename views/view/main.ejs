<body>
    <a href="/user/logout" class="mt-3 btn btn-primary">Log Out</a>
    <div class="container border border-light">
        <% episodes.forEach(episode=> { %>
            <div class="border border-light cards row align-items-center">
                <h2 class="col font text-white" id="ep-num">Episode <%=episode.episodeNumber %>
                </h2>
                <div class="col font text-white">
                    <%=episode.name %>
                </div>
                <input type="image" src="<%=episode.img %>" name="saveForm" class="col btTxt img submit text-white"
                    id="saveForm" />
                <a class=" 
                col align-self-center btn btn-primary text-white " href="/<%=episode.episodeNumber %>">Discuss
                    here!</a>
            </div>
            <% }) %>
    </div>
    <a href="/newepisode" class="mt-3 btn btn-primary">Add new episode</a>
    <a href="/user/logout" class="mt-3 btn btn-primary">Log Out</a>
</body>