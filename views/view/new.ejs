<body>
    <h2 class="text-center border border-light p-3 ">Create a Comment</h2>

    <form action="/episode/<%=episode[0].episodeNumber%>" method="POST">
        <div class="my-3 form-group">
            <label for="post">Post:</label>
            <input type="text" id="post" name="post" class="form-control" />
        </div>

        <input type="submit" class="btn btn-primary" />

        <a href="/<%=episode[0].episodeNumber%>" class="btn btn-secondary">Cancel</a>

    </form>
    <a href="/<%=episode[0].episodeNumber%>" class="mt-3 btn btn-primary">Back to episodes</a>
</body>